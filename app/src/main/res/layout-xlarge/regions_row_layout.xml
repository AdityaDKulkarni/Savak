<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d150dp"
    android:layout_marginTop="@dimen/d4dp"
    android:layout_marginBottom="@dimen/d4dp"
    android:layout_marginStart="@dimen/d4dp"
    android:layout_marginEnd="@dimen/d4dp"
    app:cardCornerRadius="@dimen/d8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvRegionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/s24sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
