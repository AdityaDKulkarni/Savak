<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/d0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivManagementBodyPerson"
            android:layout_width="@dimen/d100dp"
            android:layout_height="@dimen/d100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d8dp"
            android:layout_marginBottom="@dimen/d8dp"/>

        <TextView
            android:id="@+id/tvManagementBodyName"
            android:layout_below="@id/ivManagementBodyPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/s24sp" />

        <TextView
            android:id="@+id/tvManagementBodyProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@id/tvManagementBodyName"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/d8dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
